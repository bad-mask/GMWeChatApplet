/**index.wxss**/

.container {
  width: 100%;
  height: 100%;
  position: absolute;
  padding: 0;
}

.searchcom {
  width: 100%;
  height: 100%;
  top: 0;
}

.filtercom {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 104rpx;
  z-index: 5;
}

.welfare_body {
  padding-top: 35px;
}

.grids {
  position: relative;
  overflow: hidden;
  background-color: #d9d9d9;
  padding: 40rpx 20rpx;
}

.grids:before {
  content: " ";
  position: absolute;
  box-sizing: border-box;
  left: 0;
  top: 0;
  width: 200%;
  height: 200%;
  border: 1px solid #d9d9d9;
  color: #d9d9d9;
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-transform: scale(0.5);
  transform: scale(0.5);
}

.grid {
  position: relative;
  float: left;
  padding: 5px 5px;
  width: 50%;
  box-sizing: border-box;
  text-decoration: none;
}

.grids-small .grid {
  width: 50%;
  padding: 5px 5px;
}

.grid_icon {
  display: block;
  margin: 0 auto;
  width: 100%;
  height: 300rpx;
}

.grid_icon .grid_img {
  display: block;
  width: 100%;
  height: 100%;
  border-top-left-radius: 7rpx;
  border-top-right-radius: 7rpx;
}

.grid_label {
  text-align: left;
  color: #000;
  font-size: 14px;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  background-color: #fff;
  padding-left: 10rpx;
  padding-right: 10rpx;
}

.grid_welfare_detail {
  display: block;
  position: relative;
  background-color: #fff;
  padding-bottom: 20rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
  border-bottom-left-radius: 7rpx;
  border-bottom-right-radius: 7rpx;
}

.grid_welfare_price_tag {
  display: inline;
  left: 64rpx;
}

.grid_welfare_price {
  display: inline;
  position: relative;
  left: 4rpx;
  color: #ff7096;
  font-size: 18px;
}

.grid_welfare_price_up {
  display: inline;
  position: relative;
  left: 4rpx;
}

.grid_welfare_sell_amount {
  position: relative;
  float: right;
  top: 10rpx;
}
